namespace CmCIC\Form;

use Symfony\Component\Validator\Constraints\NotBlank;
use Thelia\Form\BaseForm;
use Thelia\Core\Translation\Translator;

class ConfigureCmCIC extends BaseForm {
	public function getName() {
		return "configurecmcic";
	}

	protected function buildForm() {
		$this->formBuilder
			->add('com_key', 'text', array(
				'label' => Translator::getInstance()->trans('com_key'),
				'label_attr' => array(
					'for' => 'com_key'
				),
				'constraints' => array(
					new NotBlank()
				)
			))
			->add('TPE', '[text', array(
				'label' => Translator::getInstance()->trans('TPE'),
				'label_attr' => array(
					'for' => 'TPE'
				),
				'constraints' => array(
					new NotBlank()
				)
			))
			->add('com_soc', 'text', array(
				'label' => Translator::getInstance()->trans('com_soc'),
				'label_attr' => array(
					'for' => 'com_soc'
				),
				'constraints' => array(
					new NotBlank()
				)
			))
			->add('server', 'radio', array(
				'label' => Translator::getInstance()->trans('server'),
				'label_attr' => array(
					'for' => 'server'
				),
				'constraints' => array(
					new NotBlank()
				)
			))
			->add('page', 'text', array(
				'label' => Translator::getInstance()->trans('page'),
				'label_attr' => array(
					'for' => 'page'
				),
				'constraints' => array(
					new NotBlank()
				)
			))
		;
	}
}
?>